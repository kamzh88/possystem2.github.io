            <button id="button-8" class="btn btn-primary keypadNumber number" data-value="8"><span>8</span></button>
            <button id="button-9" class="btn btn-primary keypadNumber number" data-value="9"><span>9</span></button>
            <br><br>
            <button id="button-clear" class="btn btn-dark clear keypadNumber" value="clear"><span><i
                        class="far fa-arrow-alt-circle-left"></i></span></button>
            <button id="button-0" class="btn btn-primary keypadNumber number" data-value="0"><span>0</span></button>

        </div>
    </section>
</main>

