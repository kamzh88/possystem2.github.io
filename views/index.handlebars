<!-- Add New Employees Modal -->
<div class="modal fade" id="exampleModalLong1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Create New Employee</h5>
                <button id="modal1" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="create-form">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="">First Name</label>
                        <input type="text" class="form-control" id="first-name">
                    </div>
                    <div class="form-group">
                        <label for="">Last Name</label>
                        <input type="text" class="form-control" id="last-name">
                    </div>
                    <p> Select an item </p>
                    <div class="form-group">
                        <label class="checkbox-inline"><input type="checkbox" name="level"
                                value="Cashier">Cashier</label>
                        <label class="checkbox-inline"><input type="checkbox" name="level"
                                value="Manager">Manager</label>
                    </div>
                    <div class="form-group">
                        <label for="">Code (Numbers Only)</label>
                        <input type="text" class="form-control" id="employee-id">
                    </div>
                    <!-- </div> -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="modal1">Close</button>
                        <button type="submit" class="btn btn-primary submit">Create</button>
                    </div>
            </form>
        </div>
    </div>
</div>


